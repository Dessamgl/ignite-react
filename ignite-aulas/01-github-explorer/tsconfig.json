{
  "compilerOptions": {                                           
    "lib": ["dom", "dom.iterable", "esnext"],                                  
    "allowJs": true,                                                         
    "jsx": "react",                                              
    "noEmit": true,                                  
    "strict": true,           
    "moduleResolution": "node",  
    "resolveJsonModule": true, 
    "isolatedModules": true,                                               
    "allowSyntheticDefaultImports": true,        
    "esModuleInterop": true,                              
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true       
  },
  "include": ["src"]
}
